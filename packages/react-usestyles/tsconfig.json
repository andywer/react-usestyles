{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/",
    "rootDir": "src/",
    "strict": true,
    "target": "es2015",
    "paths": {
      "*": [
        "./node_modules/*",
        "../../node_modules/*"
      ]
    }
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules/",
    "../../node_modules/"
  ]
}
